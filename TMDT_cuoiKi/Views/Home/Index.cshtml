    <div class="discount-container">
        <div class="sales-banner">
            <div class="promo-text">
                <h2>Giảm giá sốc</h2>
                <p>Mua ngay!</p>
                <a href="#" class="view-all v2">
                    <span>Xem tất cả</span>
                    <i class="fas fa-chevron-right"></i>
                </a>
            </div>
            <div class="product-cards-container">
                 <div class="product-cards">
                @{
                    var db = new ShopHueDaQuaContext();

                    // Lấy 5 sản phẩm rẻ nhất kèm theo hình ảnh đầu tiên
                    var danhSachSp = db.SanPhams
                    .OrderBy(sp => sp.GiaBan) // Sắp xếp từ rẻ đến đắt
                    .Take(5) // Chỉ lấy 5 sản phẩm đầu tiên
                    .Select(sp => new
                    {
                        SanPham = sp,
                        HinhAnh = db.HinhAnhSanPhams
                    .Where(h => h.IdsanPham == sp.IdsanPham)
                    .OrderBy(h => h.IdhinhAnh)
                    .Select(h => h.HinhAnh)
                    .FirstOrDefault()
                    }).ToList();
                }

                @foreach (var item in danhSachSp)
                {
                        <div class="product-card">
                            <a href="@Url.Action("ChiTietSanPham", "Home", new { id = item.SanPham.IdsanPham })" class="product-card-link">
                                <div class="discount-badge">-50%</div>
                                <div class="product-image">
                                    <img src="@(item.HinhAnh ?? "images/default-product.jpg")" alt="@item.SanPham.TenSanPham">
                                </div>
                                <div class="product-info">
                                    <div class="product-name">@item.SanPham.TenSanPham</div>
                                    <div class="product-price">
                                        <span class="original-price">@String.Format("{0:N0}đ", item.SanPham.GiaBan * 2)</span>
                                        <span class="sale-price">@String.Format("{0:N0}đ", item.SanPham.GiaBan)</span>
                                    </div>
                                </div>
                            </a>
                        </div>

                }
            </div>
            </div>
            <div class="navigation-controls">
                
                <button class="nav-button prev-button">
                    <i class="fas fa-chevron-left"></i>
                </button>
                <button class="nav-button next-button">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </div>
    </div>
    <div class="newproduct-container">
        <div class="section-header">
            <h2 class="section-title">Sản phẩm mới</h2>
            <a href="#" class="view-all">
                <span>Xem tất cả</span>
                <i class="fas fa-chevron-right"></i>
            </a>


        </div>

        <hr class="section-divider">

        <div class="product-carousel">
            <div class="carousel-nav">
                <button class="carousel-button prev">
                    <i class="fas fa-chevron-left"></i>
                </button>
                <button class="carousel-button next">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>

            <div class="product-slider">
            @{

                // Lấy 5 sản phẩm mới nhất (IdsanPham lớn nhất) kèm theo hình ảnh đầu tiên
                var sanPhamMoi = db.SanPhams
                .OrderByDescending(sp => sp.IdsanPham)
                .Take(5)
                .Select(sp => new
                {
                    SanPham = sp,
                    HinhAnh = db.HinhAnhSanPhams
                .Where(h => h.IdsanPham == sp.IdsanPham)
                .OrderBy(h => h.IdhinhAnh)
                .Select(h => h.HinhAnh)
                .FirstOrDefault()
                }).ToList();
            }

            @foreach (var item in sanPhamMoi)
            {
                <div class="product-card_2">
                    <div class="product-image_2">
                        <img src="@(item.HinhAnh ?? "images/default-product.jpg")" alt="@item.SanPham.TenSanPham">
                    </div>
                    <h3 class="product-name_2">@item.SanPham.TenSanPham</h3>
                    <div class="product-details_2">
                        <span class="product-price_2">@String.Format("{0:N0}đ", item.SanPham.GiaBan)</span>
                        <span class="product-rating_2">★ 4.5</span> <!-- Có thể thay bằng đánh giá thực nếu có -->
                    </div>
                </div>
            }

            </div>
        </div>
