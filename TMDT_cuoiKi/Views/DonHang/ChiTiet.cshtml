<script>
    function setStep(activeStep) {
        const steps = document.querySelectorAll('.progress-step');
        const progressLineActive = document.getElementById('progressLineActive');

        const firstStep = steps[0].offsetLeft + steps[0].offsetWidth / 2;
        const lastStep = steps[steps.length - 1].offsetLeft + steps[0].offsetWidth / 2;

        const totalWidth = lastStep - firstStep;

        const newWidth = (activeStep / (steps.length - 1)) * totalWidth;

        if (activeStep === 0) {
            progressLineActive.style.width = '0px';
        } else {
            progressLineActive.style.width = `${newWidth}px`;
        }

        steps.forEach((step, index) => {
            step.classList.remove('step-completed', 'step-active', 'step-inactive');

            if (index < activeStep) {
                step.classList.add('step-completed');
            } else if (index === activeStep) {
                step.classList.add('step-active');
            } else {
                step.classList.add('step-inactive');
            }
        });
    }

    // Khởi tạo với bước 2 đang active (Chờ duyệt)
    setStep(0);
</script>